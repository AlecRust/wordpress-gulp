//
// WordPress Core captions
// --------------------------------------------------

@require "../mixins"

.wp-caption
  text-align center
  max-width 96% // Image does not overflow the content area
  background-color #eee
  padding 5px 3px 10px

  img
    square(auto)
    border 0 none
    margin 0
    max-width 98.5%
    padding 0

.wp-caption p.wp-caption-text
  font-size 11px
  line-height 17px
  margin 0
  padding 0 4px 5px

.gallery-caption
  border 1px solid #f0f0f0
  padding 5px 3px 10px
