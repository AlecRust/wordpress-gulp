/** @define SiteHeaderMenu; weak */

@require "../base/variables"

.SiteHeaderMenu
  background-color #f2f2f2

/* postcss-bem-linter: ignore */
.SiteHeaderMenu-item
  &.current_page_item a,
  &.current_page_parent a
    background-color #ddd

  a
    display block
    text-decoration none
    padding 10px 20px

    &:hover
      background-color #ddd

@media (min-width $screen-xs)
  .SiteHeaderMenu-list
    text-align center

  .SiteHeaderMenu-item
    display inline-block

    a
      padding-left 20px
      padding-right @padding-left

@media (min-width $screen-sm)
  .SiteHeaderMenu-list
    text-align right
    margin-right 15px

  .SiteHeaderMenu-item
    font-size $font-size-base + 3px

@media (min-width $screen-md)
  .SiteHeaderMenu-list
    margin-right 0
