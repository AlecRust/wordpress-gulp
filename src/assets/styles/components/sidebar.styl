//
// Sidebar
// --------------------------------------------------

@require "../base/forms"

.Sidebar
  background-color #efefef
  padding 20px

.Sidebar-widget
  overflow hidden // Can't extend SUIT's .u-cf
  margin-bottom 20px

  &:last-child
    margin-bottom 0

.Sidebar-title
  font-size $font-size-lg - 5px

// Recent posts widget
.widget_recent_entries
  ul
    list-style-type disc
    padding-left 20px

  li
    margin-bottom 5px

    &:last-child
      margin-bottom 0

@media (min-width $screen-sm)
  .Sidebar
    float right
    width 25%
    margin-top 73px
