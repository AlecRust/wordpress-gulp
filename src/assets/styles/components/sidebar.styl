//
// Sidebar
// --------------------------------------------------

@require "../base/forms"

.Sidebar
  background-color #efefef
  padding 20px

.Sidebar-widget
  overflow hidden // Can't extend SUIT's .u-cf
  margin-bottom 20px

  &:last-child
    margin-bottom 0

.Sidebar-title
  font-size $font-size-lg - 5px

// Recent posts widget
.widget_recent_entries
  ul
    list-style-type disc
    padding-left 20px

  li
    margin-bottom 5px

    &:last-child
      margin-bottom 0

// Jetpack Subscription Widget
.jetpack_subscription_widget
  #subscribe-email
    width 70%
    float left

    input[type="email"]
      width 100%
      border 1px solid $color-brand-gray
      border-radius $border-radius-base
      font-size 13px
      padding 3px 6px 4px

      &:hover
        border-color darken($color-brand-gray, 10%)

      &:focus
        outline 0
        border-color $color-brand-pink

  #subscribe-submit
    width 30%
    float right

    input[type="submit"]
      Button()
      Button--sm()
      Button--default()
      width 100%
      margin-left 4px

@media (min-width $screen-sm)
  .Sidebar
    float right
    width 25%
    margin-top 73px
