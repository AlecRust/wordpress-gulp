/** @define Button */

// TODO: Refactor so these aren't mixins

@require "../base/variables"

Button()
  font-size $font-size-base
  border-width 2px
  border-radius $border-radius-base

.Button
  Button()

Button--sm()
  font-size $font-size-base - 2px
  border-width 1px
  padding 4px 9px

.Button--sm
  Button--sm()

Button--lg()
  font-size $font-size-base + 2px
  padding 10px 20px

.Button--lg
  Button--lg()

Button--default()
  color #444
  border-color $color-brand-gray
  background-color #fff

  &:hover
    color #444
    background-color lighten($color-brand-gray, 20%)

.Button--default
  Button--default()

Button--primary()
  color #fff
  border-color $color-brand-primary
  background-color $color-brand-primary

  &:hover
    color $text-color
    background-color #fff

.Button--primary
  Button--primary()

Button--success()
  color #fff
  border-color $color-brand-success
  background-color $color-brand-success

  &:hover
    color $text-color
    background-color #fff

.Button--success
  Button--success()
