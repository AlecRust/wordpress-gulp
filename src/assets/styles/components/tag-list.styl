/** @define TagList; weak */

@require "../base/variables"

.TagList
  display inline

.TagList-item
  display inline-block
  margin 0 5px 5px 0

  &:last-child
    margin-right 0

  a
    display block
    text-decoration none
    background-color $color-brand-secondary
    padding 3px 6px

    &:hover
      background-color lighten($color-brand-secondary, 10%)
