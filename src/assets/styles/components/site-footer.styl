//
// SiteFooter
// --------------------------------------------------

@require "../base/functions";
@require "../base/variables";

.SiteFooter
  text-align center
  font-size px($font-size-base - 1)
  background-color $color-brand-primary
  padding px(30) px(20)

  .SocialIcons-list
    margin-bottom px(20)

.SiteFooter-copyright
  margin-bottom px(20)

@media (min-width $screen-sm)
  .SiteFooter
    padding px(50) px(20) px(40)

    .SocialIcons-list
      float right
      margin-bottom 0

  .SiteFooter-copyright
    float left
    margin-bottom 0
    padding-top 6px
