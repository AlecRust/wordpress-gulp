/** @define SiteFooter; weak */

@require "../base/functions";
@require "../base/variables";

.SiteFooter
  color #fff
  text-align center
  font-size px($font-size-base - 1)
  background-color $color-brand-primary
  padding px(30) px(20)

  a
    color #fff

.SiteFooter-copyright
  margin-bottom px(20)

@media (min-width $screen-sm)
  .SiteFooter
    padding px(50) px(20) px(40)

    .SocialIcons-list
      float right

  .SiteFooter-copyright
    float left
    margin-bottom 0
    padding-top 6px
